<div class="main quizzes-show">
  <div class="container">
    <div class="quizzes-show-item">
      <p>
        Question
      </p>
      <p>
        <%= @quiz.content %>
      </p>
      <p>
        Answer
      </p>
      <p>
        <%= @quiz.answer %>
      </p>
      <div class="quiz-time">
        <%= @quiz.created_at %>
      </div>
      <div class="quiz-menus">
        <%= link_to("編集", "/quizzes/#{@quiz.id}/edit") %>
        <%= link_to("削除", "/quizzes/#{@quiz.id}/destroy", {method: "post"}) %>
      </div>
    </div>
  </div>
</div>